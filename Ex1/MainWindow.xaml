<Window x:Class="Ex1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex1"
        mc:Ignorable="d"
        xmlns:Controls="clr-namespace:Ex1.controls"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Controls:Joystick x:Name="Joystick"/>
        <Controls:videoControlView x:Name="VideoControl" Margin="121,257,0,0"/>
        <Slider x:Name="SizeSlider" HorizontalAlignment="Left" Margin="253,247,0,0" VerticalAlignment="Top" Width="189" Maximum="1" Minimum="0" Value="{Binding ElementName=Joystick, Path=Joystick_Size, Mode=OneWayToSource}"/>
        <Slider x:Name="AngleSlider" HorizontalAlignment="Left" Margin="253,282,0,0" VerticalAlignment="Top" Width="189" Maximum="360" Minimum="0" Value="{Binding ElementName=Joystick, Path=Joystick_Angle, Mode=OneWayToSource}"/>
    </Grid>
</Window>
