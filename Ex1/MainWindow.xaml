<Window ResizeMode="NoResize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex1"
        xmlns:Controls="clr-namespace:Ex1.controls"
        xmlns:GraphReg="clr-namespace:Ex1.controls.GraphReg" x:Class="Ex1.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="694.833" Width="1073.333">
    <Grid>
        <Controls:Joystick Grid.Row="0" Grid.Column="0" x:Name="Joystick" Margin="0,0,58,33"/>
        <Controls:videoControlView x:Name="VideoControl" Margin="129,482,268,0"/>
        <Button x:Name="UploadCSVButton" Content="Choose CSV" HorizontalAlignment="Left" Margin="54,611,0,0" VerticalAlignment="Top" Width="75" Click="UploadCSVButton_Click"/>
        <Viewbox Margin="540,345,349,189">
            <GraphReg:GraphRegView x:Name="GraphReg" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"/>
        </Viewbox>
            <ListView x:Name="FeaturesListView" HorizontalAlignment="Left" Height="397" Margin="252,80,0,0" VerticalAlignment="Top" Width="157" SelectionChanged="FeaturesListView_SelectionChanged" ItemsSource="{Binding Definitions}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Features"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Viewbox Margin="525,124,474,412">
            <Controls:GraphControl x:Name="DisplayFeatureGraphControl" Minimum_x="0" Maximum_x="{Binding Size}" Minimum_y="{Binding DisplayFeatureMinValue}" Maximum_y="{Binding DisplayFeatureMaxValue}" Points="{Binding ValuesOfDisplayFeature}" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="126"/>
        </Viewbox>
        <Viewbox Margin="699,124,300,412">
            <Controls:GraphControl x:Name="CorrelatedFeatureGraphControl" Minimum_x="0" Maximum_x="{Binding Size}" Minimum_y="{Binding CorrolateFeatureMinValue}" Maximum_y="{Binding CorrolateFeatureMaxValue}" Points="{Binding ValuesOfCorrelateFeature}" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="126"/>
        </Viewbox>

    </Grid>
</Window>
